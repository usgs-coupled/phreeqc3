# CO2 solubility in Na2SO4 solutions, Rumpf and Maurer, 1993.
DATABASE ../database/pitzer.dat

SOLUTION 1
 pH 7 charge
 Na 2e3; S(6) 1e3
 -temp 25
EQUILIBRIUM_PHASES
 CO2(g) 1.9
# Mirabilite 0 0
GAS_PHASE 1
     -fixed_volume
     CO2(g) 0
	 H2O(g) 0
REACTION_TEMPERATURE
 25 160 in 10
USER_GRAPH
 -plot_csv_file CO2_Na2SO4.dat
 -axis_titles "Temp / oC" "CO2 solubility at 80 bar / (mol/kgw)"
 -connect_simulations false
 10 graph_x tc
 20 graph_y tot("C")
END

SOLUTION 1
 pH 7 charge
 Na 4e3; S(6) 2e3
 -temp 25
USE equilibrium_phases 1; USE reaction_temperature 1; USE gas_phase 1
END